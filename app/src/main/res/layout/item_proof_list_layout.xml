<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dip">

    <TextView
        android:id = "@+id/proof_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/dark_font"
        android:text="记录类型"/>

    <TextView
        android:id = "@+id/proof_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:lineSpacingExtra="1dip"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/dark_font"
        android:text="请您登录 登录 29日7:30直播奇才VS老鹰 华盛顿迎来赛点 29日10:30央视腾讯将播快船"/>

    <TextView
        android:id = "@+id/proof_address_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:textSize="12sp"
        android:textColor="@color/dark_font"
        android:text="讯美科技广场"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:textSize="12sp"
        android:textColor="@color/dark_font"
        android:text="涉事人"/>

    <!--<com.puti.education.widget.GridViewForScrollView
        android:id="@+id/involved_people_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.5dip"
        android:horizontalSpacing="13dip"
        android:minHeight="75dip"
        android:numColumns="5"
        android:verticalSpacing="13dip" />-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.5dip"
        android:gravity="center_horizontal">

        <ImageView
            android:id = "@+id/involved_head_img"
            android:layout_width="49dip"
            android:layout_height="49dip"
            android:scaleType="centerCrop"
            android:background="@drawable/img_circle_bg"
            android:layout_marginBottom="10dip"/>

        <TextView
            android:id = "@+id/involved_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/dark_font"
            android:text="杨艳"/>

    </LinearLayout>


    <TextView
        android:id = "@+id/date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:textSize="12sp"
        android:textColor="@color/dark_font"
        android:text="2016-01-23"/>

</LinearLayout>