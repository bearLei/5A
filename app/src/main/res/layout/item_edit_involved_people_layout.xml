<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dip">

        <ImageView
            android:id="@+id/edit_head_img"
            android:layout_width="49dip"
            android:layout_height="49dip"
            android:layout_marginTop="15dip"
            android:scaleType="centerCrop"
            android:src="@drawable/img_circle_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="15dip"
            android:layout_toRightOf="@id/edit_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/edit_involved_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="程程"
                android:textColor="#3e3e3e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/edit_involved_class_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:text="艺术学院03班"
                android:textColor="#626262"
                android:textSize="13sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/edit_del_frame"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@mipmap/ic_delete" />

        </FrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/responsibility_type_choose_tv"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_marginRight="7dip"
                android:layout_weight="1"
                android:background="@drawable/gray_border_bg"
                android:drawableRight="@mipmap/ic_down_arrow"
                android:gravity="center_vertical"
                android:hint="责任等级"
                android:padding="11dip"
                android:textColor="#707070"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/important_grade_tv"
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_marginLeft="7dip"
                android:layout_weight="1"
                android:background="@drawable/gray_border_bg"
                android:drawableRight="@mipmap/ic_down_arrow"
                android:gravity="center_vertical"
                android:hint="警告等级"
                android:padding="11dip"
                android:textColor="#707070"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="160px"
                android:layout_height="37px"
                android:text="预警信息推送"
                android:textColor="#FF3E3E3E"
                android:textSize="26px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/parentLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/parent_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_item_unselected" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="家长"
                        android:textColor="@color/radio_text_style"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/parent_img_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="63dip"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="14dip"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/edit_family1_img"
                        android:layout_width="49dip"
                        android:layout_height="49dip"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_circle_bg"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/edit_family2_img"
                        android:layout_width="49dip"
                        android:layout_height="49dip"
                        android:layout_marginLeft="10dip"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_circle_bg"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stuLinear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stu_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_item_unselected" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:text="学生处"
                    android:textColor="@color/radio_text_style"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dip"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/otherLeaderLinear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/other_leader_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_item_unselected" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dip"
                        android:text="其他班主任"
                        android:textColor="@color/radio_text_style"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="14dip"
                    android:orientation="horizontal">

                    <com.puti.education.widget.GridViewForScrollView
                        android:id="@+id/other_leader_gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11.5dip"
                        android:horizontalSpacing="13dip"
                        android:minHeight="75dip"
                        android:numColumns="5"
                        android:verticalSpacing="13dip" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否跟踪"
                    android:textColor="#FF3E3E3E"
                    android:textSize="13sp" />

                <RadioGroup
                    android:id="@+id/is_follow_rg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/yes_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:button="@drawable/radio_bg"
                        android:padding="5dip"
                        android:text="是"
                        android:textColor="@color/radio_text_style"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/no_rbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dip"
                        android:background="@null"
                        android:button="@drawable/radio_bg"
                        android:padding="5dip"
                        android:text="否"
                        android:textColor="@color/radio_text_style"
                        android:textSize="12sp" />

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="事件处理方法描述"
                    android:textColor="#FF3E3E3E"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/deal_edit_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="120dip"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/gray_border_bg"
                    android:gravity="top|left"
                    android:hint="输入"
                    android:padding="15dip"
                    android:textColor="@color/dark_font"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="推荐专家给家长"
                    android:textColor="#FF3E3E3E"
                    android:textSize="13sp" />

                <com.puti.education.widget.GridViewForScrollView
                    android:id="@+id/professor_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.5dip"
                    android:horizontalSpacing="13dip"
                    android:minHeight="75dip"
                    android:numColumns="5"
                    android:verticalSpacing="13dip" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dip"
        android:background="@color/line_bg" />

</LinearLayout>