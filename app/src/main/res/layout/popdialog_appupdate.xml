<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pop_outside"
    android:background="@drawable/updata_dialog_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/pop_image"
        android:layout_marginTop="-120dp"
        android:paddingBottom="17dp"
        >
        <TextView
            android:id="@+id/update_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="检测到有新版本，请立即更新"
            android:textColor="#4577dc"
            android:textSize="18sp"
            android:layout_marginTop="120dp"
            />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/pop_update"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/update_tv"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="更新"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:background="@drawable/shape_btn_4577dc"
            />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/pop_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/update_new"
        android:paddingBottom="0dp"
        />
</RelativeLayout>