<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/two_element_titlebar_layout"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:background="#F1F1F1">

        <ScrollView
            android:id="@+id/left_scroll"
            android:layout_width="90dip"
            android:layout_marginRight="11dp"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:divider="@null"
            android:fadingEdge="none"
            android:overScrollMode="never"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/left_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:layout_marginTop="1px" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:overScrollMode="never">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_review1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_review_name1"
                            android:text=" "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/green_font"/>
                        <com.puti.education.widget.RatingBarView
                            android:id="@+id/ratingbar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:starCount="5"
                            app:starEmpty="@mipmap/ic_rate_off"
                            app:starFill="@mipmap/ic_rate_on"
                            app:starImageSize="50dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_review2"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp">
                        <TextView
                            android:id="@+id/tv_review_name2"
                            android:text=" "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/green_font"/>
                        <com.puti.education.widget.RatingBarView
                            android:id="@+id/ratingbar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:starCount="5"
                            app:starEmpty="@mipmap/ic_rate_off"
                            app:starFill="@mipmap/ic_rate_on"
                            app:starImageSize="50dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_review3"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tv_review_name3"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/green_font"/>
                        <com.puti.education.widget.RatingBarView
                            android:id="@+id/ratingbar3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:starCount="5"
                            app:starEmpty="@mipmap/ic_rate_off"
                            app:starFill="@mipmap/ic_rate_on"
                            app:starImageSize="50dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/layout_review4"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:visibility="gone">
                        <TextView
                            android:id="@+id/tv_review_name4"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/green_font"/>
                        <com.puti.education.widget.RatingBarView
                            android:id="@+id/ratingbar4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            app:starCount="5"
                            app:starEmpty="@mipmap/ic_rate_off"
                            app:starFill="@mipmap/ic_rate_on"
                            app:starImageSize="50dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true">
                        <TextView
                            android:text="总体评价"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/green_font"/>

                        <EditText
                            android:id="@+id/et_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="206dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/input_dark_with_right_border"
                            android:textSize="12sp"
                            android:padding="5dp"
                            android:gravity="top"
                            android:lineSpacingExtra="1dip"
                            android:textColor="@color/dark_font2">


                        </EditText>

                    </LinearLayout>

                    <Button
                        android:text="评价"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/selector_button_bg_with_green"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:id="@+id/btnCommitRatePeople" />
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </LinearLayout>





</LinearLayout>