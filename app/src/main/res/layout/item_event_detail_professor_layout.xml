<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="83dip"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/professor_img"
        android:layout_width="49dip"
        android:layout_height="49dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:scaleType="centerCrop"
        android:src="@drawable/img_circle_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_toRightOf="@+id/professor_img"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/professor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乌海"
                android:textColor="#3e3e3e"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/profession_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#626262"
                android:textSize="13sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/consult_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="80dip"
            android:layout_height="37dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="18dip"
            android:background="@drawable/green_circle_btn_bg"
            android:text="咨询"
            android:textColor="#ffffff"
            android:visibility="visible" />


    </LinearLayout>

</RelativeLayout>