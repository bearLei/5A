<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout style="@style/personal_info_textparent_style">

            <TextView
                style="@style/personal_info_text_style"
                android:text="姓名" />

            <EditText
                android:id="@+id/child_name_tv"
                style="@style/personal_info_right_text_style"
                android:layout_marginRight="50dip"/>

        </RelativeLayout>

        <View style="@style/line_style" />

        <RelativeLayout style="@style/personal_info_textparent_style">

            <TextView
                style="@style/personal_info_text_style"
                android:text="学校" />

            <EditText
                android:id="@+id/child_school_tv"
                style="@style/personal_info_right_text_style"
                android:text="" />

        </RelativeLayout>

        <View style="@style/line_style" />

        <RelativeLayout style="@style/personal_info_textparent_style" android:visibility="gone">

            <TextView
                style="@style/personal_info_text_style"
                android:text="年级" />

            <EditText
                android:id="@+id/child_grade_tv"
                style="@style/personal_info_right_text_style"
                android:text="" />

        </RelativeLayout>


        <View style="@style/line_style" />

        <RelativeLayout style="@style/personal_info_textparent_style">

            <TextView
                style="@style/personal_info_text_style"
                android:text="专业" />

            <EditText
                android:id="@+id/child_major_tv"
                style="@style/personal_info_right_text_style"
                android:text="" />

        </RelativeLayout>

        <View style="@style/line_style" />

        <RelativeLayout style="@style/personal_info_textparent_style">


            <TextView
                style="@style/personal_info_text_style"
                android:text="班级" />

            <EditText
                android:id="@+id/child_class_tv"
                style="@style/personal_info_right_text_style"
                android:text="" />

        </RelativeLayout>

        <View style="@style/line_style" />

        <RelativeLayout style="@style/personal_info_textparent_style">


            <TextView
                style="@style/personal_info_text_style"
                android:text="学号" />

            <EditText
                android:id="@+id/child_num_tv"
                style="@style/personal_info_right_text_style"
                android:text="" />

        </RelativeLayout>

        <View android:layout_height="5dip"
            android:layout_width="match_parent"
            android:background="@color/window_bg"/>

    </LinearLayout>

    <FrameLayout
        android:id = "@+id/del_frame"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="right">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_small_delete"/>
    </FrameLayout>
</FrameLayout>