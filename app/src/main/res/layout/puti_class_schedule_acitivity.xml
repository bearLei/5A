<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_f3f3f3"
    >

    <unit.widget.HeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"></unit.widget.HeadView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/base_ffffff"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        >
        <TextView
            android:id="@+id/week_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/base_333333"
            android:gravity="center"
            />
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/base_ededed"
            />
        <TextView
            android:id="@+id/fillter_class"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/base_333333"
            android:drawableRight="@drawable/puti_down_big"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            />

    </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_ffffff"
            android:layout_marginTop="@dimen/dp_15"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_header"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_monday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_thusday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_wednesday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_thursday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_friday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_saturday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
                <unit.moudle.schedule.ScheduleItemLayout
                    android:id="@+id/list_sunday"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    ></unit.moudle.schedule.ScheduleItemLayout>
            </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </HorizontalScrollView>

</LinearLayout>