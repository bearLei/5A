<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg2">

    <include layout="@layout/two_element_titlebar_layout"/>
    <com.puti.education.widget.CommonNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/window_bg"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:background="@drawable/circle_small_corner_dark_bg">
            <LinearLayout
                android:id="@+id/layout_desc"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_desc"
                    android:text="描述:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/dark_font"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:background="@drawable/input_dark_with_right_border"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="top"
                    android:paddingTop="1dp"
                    android:id="@+id/editText"
                    android:minHeight="80dp" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_attach"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_attach"
                    android:text="附件:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/dark_font"
                    />
                <LinearLayout
                    android:id="@+id/itemcontainer_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    >
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_large"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@color/white">

                <TextView
                    android:id="@+id/title_test"
                    android:text="举报对象:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/dark_font" />
                <LinearLayout
                    android:id="@+id/itemcontainer_involver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:minHeight="111dp"
                android:background="@color/white">


            </LinearLayout>

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:minHeight="130dp"
            android:background="@color/white"
                android:visibility="gone">

            <TextView
                android:text="其他知道此事的学生或老师"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textSize="13dp"
                android:textColor="@color/black_font"/>

                <LinearLayout
                    android:id="@+id/itemcontainer_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="vertical"
                    >
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <Button
            android:text="提交"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/green_circle_btn_bg"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:id="@+id/btn_commit" />
        </LinearLayout>
    </com.puti.education.widget.CommonNestedScrollView>

</LinearLayout>
